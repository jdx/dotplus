.row
  .columns
    %h2= @event.start.to_date
    %p
      %strong Start:
      = @event.start
    %p
      %strong End:
      = @event.end
    %p
      %strong Sponsor:
      - if @event.sponsor
        = link_to @event.sponsor.name, admin_sponsor_path(@event.sponsor)
      - else
        TBD
    %p
      %strong Location:
      - if @event.location
        = link_to @event.location.name, admin_location_path(@event.location)
      - else
        TBD
    %p
      %strong Organizer:
      - if @event.organizer
        = link_to @event.organizer.name, admin_user_path(@event.organizer)
      - else
        TBD
    = link_to "Edit", edit_admin_event_path(@event), class: 'button'
    = link_to "View on site", event_path(@event), class: 'button'
